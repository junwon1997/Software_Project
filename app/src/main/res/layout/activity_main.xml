<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_clothes_scan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_clothes_recommend"
        android:text="의상스캔"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/square_background_black_round_white"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/main_clothes_recommend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_clothes_scan"
        app:layout_constraintBottom_toTopOf="@+id/main_closet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="의상추천"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/square_background_black_round_white"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/main_closet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_clothes_recommend"
        app:layout_constraintBottom_toTopOf="@id/main_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="옷장"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/square_background_black_round_white"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/main_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_closet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="환경설정"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/square_background_black_round_white"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>