<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/clothes_recommend_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/clothes_recommend_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_background_black_round_white"
        android:text="뒤로 가기"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clothes_recommend_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clothes_recommend_back"
        app:layout_constraintBottom_toTopOf="@id/clothes_recommend_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_background_black_round_white"
        android:text="전체 추천"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clothes_recommend_choose"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clothes_recommend_all"
        app:layout_constraintBottom_toTopOf="@id/clothes_recommend_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_background_black_round_white"
        android:text="선택 옷 기준 추천"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clothes_recommend_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clothes_recommend_choose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_background_black_round_white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>