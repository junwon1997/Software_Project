<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/gallery_top_iv"
        android:text=""
        android:textSize="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="250dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gallery_top_shoot_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/gallery_top_shoot_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text= "갤러리"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/square_background_black_round_white"
        app:layout_constraintTop_toBottomOf="@id/gallery_top_iv"
        app:layout_constraintBottom_toTopOf="@id/gallery_top_complete_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/gallery_top_complete_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gallery_top_shoot_tv"
        app:layout_constraintBottom_toTopOf="@id/gallery_top_reshoot_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text= "옷장 등록하기"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/square_background_black_round_white"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/gallery_top_reshoot_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gallery_top_complete_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text= "다시 촬영하기"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/square_background_black_round_white"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>